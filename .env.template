# Trading Bot Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=trading-bot
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# ============================================================================
# EXCHANGE CONFIGURATION (Multi-Exchange Support via CCXT)
# ============================================================================
# Enable CCXT for multi-exchange support (false = use legacy Binance client)
USE_CCXT=false

# Exchange ID (when USE_CCXT=true)
# Supported: binance, kraken, coinbase, bybit, okx, huobi, kucoin, bitfinex, etc.
# See full list: https://github.com/ccxt/ccxt#supported-cryptocurrency-exchange-markets
EXCHANGE_ID=binance

# Exchange API credentials (used when USE_CCXT=true)
EXCHANGE_API_KEY=your_exchange_api_key_here
EXCHANGE_API_SECRET=your_exchange_api_secret_here
EXCHANGE_TESTNET=false

# ============================================================================
# BINANCE API CREDENTIALS (Legacy - for backward compatibility)
# ============================================================================
# Used when USE_CCXT=false or as fallback
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=false

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_TYPE=sqlite
DB_PATH=/var/lib/trading-bot/trading_bot.db
# For PostgreSQL (optional):
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=trading_bot
# DB_USER=trading_bot_user
# DB_PASSWORD=your_db_password_here

# ============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# ============================================================================
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# TRADING SETTINGS
# ============================================================================
TRADING_ENABLED=true
TRADING_MODE=live
DEFAULT_SYMBOL=BTCUSDT
MAX_POSITION_SIZE=0.1
STOP_LOSS_PERCENTAGE=2.0
TAKE_PROFIT_PERCENTAGE=5.0

# ============================================================================
# RISK MANAGEMENT
# ============================================================================
MAX_DAILY_TRADES=10
MAX_OPEN_POSITIONS=3
MAX_DAILY_LOSS_PERCENTAGE=5.0
POSITION_SIZE_PERCENTAGE=2.0

# ============================================================================
# NOTIFICATION SETTINGS
# ============================================================================
ENABLE_NOTIFICATIONS=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL=

# ============================================================================
# WEB INTERFACE / API
# ============================================================================
WEB_ENABLED=false
WEB_HOST=127.0.0.1
WEB_PORT=8080
API_SECRET_KEY=change_this_to_a_random_secret_key

# ============================================================================
# MONITORING & HEALTH CHECKS
# ============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=300
METRICS_ENABLED=false
PROMETHEUS_PORT=9090

# ============================================================================
# BACKUP SETTINGS
# ============================================================================
BACKUP_ENABLED=true
BACKUP_DIR=/var/backups/trading-bot
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
IP_WHITELIST=127.0.0.1
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60

# ============================================================================
# LOGGING
# ============================================================================
LOG_DIR=/var/log/trading-bot
LOG_FILE=trading-bot.log
LOG_MAX_SIZE=100M
LOG_BACKUP_COUNT=10
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# ============================================================================
# SYSTEM PATHS
# ============================================================================
APP_DIR=/opt/trading-bot
DATA_DIR=/var/lib/trading-bot
CONFIG_DIR=/etc/trading-bot
PID_FILE=/var/run/trading-bot.pid
